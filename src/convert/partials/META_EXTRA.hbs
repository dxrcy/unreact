{{!-- Add url unless 'no-url' argument was given --}}
{{#unless no-url}}
<meta name="url" content="{{URL}}" />
<meta property="og:url" content="{{URL}}" />
{{/unless}}


{{!-- Add 'title' if argument was given --}}
{{#if title}}
<meta itemprop="name" content="{{title}}" />
<meta property="og:title" content="{{title}}" />
<meta name="twitter:title" content="{{title}}" />
{{/if}}


{{!-- Add 'description' if argument was given --}}
{{#if description}}
<meta name="description" content="{{description}}" />
<meta itemprop="description" content="{{description}}" />
<meta property="og:description" content="{{description}}" />
<meta name="twitter:description" content="{{description}}" />
{{/if}}


{{!-- Add 'image' if argument was given --}}
{{#if image}}
{{!-- If 'absolute-image' argument was given, don't add URL --}}
{{#if absolute-image}}
<meta name="image" content="{{image}}" />
<meta itemprop="image" content="{{image}}" />
<meta property="og:image" content="{{image}}" />
<meta name="twitter:image" content="{{image}}" />
{{else}}
{{!-- If 'absolute-image' argument was NOT given, DO add URL --}}
<meta name="image" content="{{concat (URL) image}}" />
<meta itemprop="image" content="{{concat (URL) image}}" />
<meta property="og:image" content="{{concat (URL) image}}" />
<meta name="twitter:image" content="{{concat (URL) image}}" />
{{/if}}
{{/if}}


{{!-- Add 'author' if argument was given --}}
{{#if author}}
<meta name="author" content="{{author}}" />
{{/if}}


{{!-- Add 'theme-color' if argument was given --}}
{{#if theme-color}}
<meta name="theme-color" content="{{theme-color}}" />
{{/if}}


{{!-- Add miscellaneous items unless 'no-misc' argument was given --}}
{{#unless no-misc}}
<meta property="og:type" content="website" />
<meta name="twitter:card" content="summary_large_image" />
{{/unless}}